{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["DOM", "ES2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "newLine": "lf"
  },
  "include": ["**/*.ts", "**/*.tsx", "env.d.ts"],
  "references": [
    {"path": "documentation/tsconfig.json"}
  ]
}
