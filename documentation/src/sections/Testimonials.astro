---
import Heading from "@/components/Heading";
import StackedCarousel from "@/components/StackedCarousel.tsx";
import Headline from "@/components/Headline.astro";

import TestimonialStars from "../assets/svg/testimonial-stars.svg?react";
---

<section class="relative">
  <!-- Left overlay -->
  <div
    class="pointer-events-none hidden lg:absolute lg:block inset-y-0 left-0 w-[30%] bg-gradient-to-r from-gray-900 to-transparent"
  >
  </div>
  <!-- Left Stars -->
  <TestimonialStars
    className="absolute left-0 -bottom-10 lg:top-0 w-1/3 md:w-[30%] -z-50"
  />

  <section class="container max-w-4xl flex flex-col items-center not-content">
    <Headline>Testimonials</Headline>
    <Heading size="h2" className="lg:pt-5 pt-4 text-center">
      Voices from the dev world
    </Heading>

    <div class="pt-16 md:pt-14 w-full">
      <StackedCarousel client:only="preact" />
    </div>
  </section>

  <!-- Right Stars -->
  <TestimonialStars
    className="absolute right-0 -bottom-10 lg:top-0 w-1/3 md:w-[30%] -z-50"
  />
  <!-- Right overlay -->
  <div
    class="pointer-events-none hidden lg:absolute lg:block inset-y-0 right-0 w-[30%] bg-gradient-to-l from-gray-900 to-transparent"
  >
  </div>
</section>
