---
import CommandCarousel from "@/components/CommandCarousel.tsx";
import Heading from "@/components/Heading";
import Headline from "@/components/Headline.astro";
---

<section class="flex justify-center">
  <div class="max-w-[2500px]">
    <div class="flex flex-col items-center">
      <div class="pb-3 lg:pb-4">
        <Headline> How it works </Headline>
      </div>
      <Heading size="h2" className="max-w-3xl text-center"
        >Yarn in action</Heading
      >
    </div>

    <div class="relative lg:pt-14 pt-10">
      <!-- Left overlay -->
      <div
        class="pointer-events-none hidden lg:absolute lg:block inset-y-0 left-0 w-[30%] bg-gradient-to-r from-gray-900 to-transparent z-20"
      >
      </div>

      <CommandCarousel client:only="preact" />

      <!-- Right overlay -->
      <div
        class="pointer-events-none hidden lg:absolute lg:block inset-y-0 right-0 w-[30%] bg-gradient-to-l from-gray-900 to-transparent z-20"
      >
      </div>
    </div>
  </div>
</section>
